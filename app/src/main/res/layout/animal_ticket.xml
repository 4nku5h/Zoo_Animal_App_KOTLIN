<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:padding="7dp"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/iv_ani"
            android:layout_width="259dp"
            android:layout_height="119dp"
            android:layout_weight="1"
            android:background="@drawable/background"
            android:padding="2dp"
            app:srcCompat="@drawable/lionpng" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:gravity="left"
                android:paddingLeft="3pt"
                android:text="Lion"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:ellipsize="end"
                android:maxLines="3"
                android:id="@+id/tv_des"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:background="#f4ecec"
                android:gravity="left"
                android:padding="3pt"
                android:text="The lion is a species in the cat family.It is a muscular, rounded head, a reduced neck and round ears."
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>